{
    "manifest_version": 2,

    "name": "EasyNavigator",
    "description": "Browsing made more efficient.",
    "version": "0.1",
    "commands": {
        "launch-visualization": {
            "suggested_key": {
                "default": "Ctrl+Shift+V"
            },
            "description": "Launch the tabs visualization."
        },
        "toggle-mark-tab": {
            "suggested_key": {
                "default": "Ctrl+Period"
            },
            "description": "Mark or unmark the current tab."
        }

    },
    "background": {
        "scripts": ["backgroundPage.js"],
        "persistent": true
    },
    "permissions": [
        "<all_urls>",
        "history",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}
